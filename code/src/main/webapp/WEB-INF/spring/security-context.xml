	<http auto-config="true">
		<intercept-url pattern="/" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/exception/" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/login.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		
		<intercept-url pattern="/author/" access="ROLE_ADMIN" />
		<intercept-url pattern="/publisher/" access="ROLE_ADMIN" />
<!-- 		<intercept-url pattern="/publisher**" access="ROLE_USER" /> -->
<!-- 		<intercept-url pattern="/author**" access="ROLE_USER" /> -->
<!-- 		<intercept-url pattern="/author**" access="ROLE_USER" /> -->
		<form-login login-processing-url="/j_spring_security_check"
			login-page="/login" default-target-url="/"
			authentication-failure-url="/loginfailed" username-parameter="username"
			password-parameter="password" />
		<logout logout-url="/j_spring_security_logout"  logout-success-url="/logout" />
	</http>
	
	
