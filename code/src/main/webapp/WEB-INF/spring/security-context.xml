	<authentication-manager>
	  <authentication-provider>
		<jdbc-user-service data-source-ref="dataSource"
		  users-by-username-query=
		    "select username,password, status from acluser where username=?"
		  authorities-by-username-query=
		    "select a.username, ar.roles from acluser a INNER JOIN acluser_roles ar  ON a.id = ar.aclUser_id where a.username =?  " />
	  </authentication-provider>
	</authentication-manager>


